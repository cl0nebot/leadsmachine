<h2>Resend unlock instructions</h2>

<%= form_for(resource, html: {class: 'ui large form', method: :post}, as: resource_name, url: unlock_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
	<div class="ui stacked segment">
    <div class="field">
      <div class="ui left icon input">
        <i class="user icon"></i>
          <%= f.email_field :email, autofocus: true, placeholder: 'E-mail Address' %>
      </div>
    </div>

	  <div class="actions">
	    <%= f.submit "Resend unlock instructions", class: 'ui fluid large red submit button' %>
	  </div>
	</div>
<% end %>

<%= render "devise/shared/links" %>
