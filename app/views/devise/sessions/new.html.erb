<h2>Log in</h2>

<%= form_for(resource, html: {class: 'ui large form'}, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="ui stacked segment">
    <div class="field">
      <div class="ui left icon input">
        <i class="user icon"></i>
          <%= f.email_field :email, autofocus: true, placeholder: 'E-mail Address' %>
      </div>
    </div>

    <div class="field">
      <div class="ui left icon input">
        <i class="lock icon"></i>
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, class: 'ui checkbox' %>
        Remember Me
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: 'ui fluid large red submit button' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
