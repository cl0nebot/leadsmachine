<h2>Resend confirmation instructions</h2>

<%= form_for(resource, html: {class: 'ui large form', method: :post}, as: resource_name, url: confirmation_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="ui stacked segment">
    <div class="field">
      <div class="ui left icon input">
        <i class="user icon"></i>
        <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), placeholder: 'E-mail Address' %> 
      </div>
    </div>


  <div class="actions">
    <%= f.submit "Resend confirmation instructions", class: 'ui fluid large red submit button' %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
