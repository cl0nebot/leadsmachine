<%= simple_form_for(@citation_source, html: {class: 'ui form'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :site %>
    <%= f.input :submissionurl %>
    <%= f.input :da %>
    <%= f.input :freesubmit %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
